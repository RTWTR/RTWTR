@model UserViewModel

@if (@ViewData["Error"].IsNull())
{
    <h1>@Model.User.Email</h1>

    <form class="ajax-call ajax-delete" asp-area="Administration" asp-controller="Users" asp-action="DeleteUser" asp-route-userId="@Model.User.Id" method="POST"> 
        <button type="submit" class="btn btn-danger">Delete</button>
    </form>

    @if (@Model.Tweets.Count() == 0)
    {
        <div>This user has no Tweets</div>
    }
    else
    {
        <div>Tweets: </div>
        @foreach (var tweet in @Model.Tweets)
        {
            <div>
                <p>tweet.Id</p>
            </div>
        }
    }
}
else
{
    <div>User <strong>@ViewData["Error"]</strong> not found</div>
}

@section Scripts {
    @await Html.PartialAsync("_Ajax")
}