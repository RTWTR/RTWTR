@model TweetViewModel

<div class="container">
    <div id="avatar">
        <img src="@Model.TwitterUserProfileImageUrl" />
    </div>
    <div class="content col-sm-offset-1">
        <div class="name">@Model.TwitterUserScreenName</div>
        <div class="screenName">
            <a asp-controller="Users" asp-action="ShowUser" asp-route-screenname="@Model.TwitterUserScreenName">@Model.TwitterUserScreenName</a>
        </div>
        <div class="text">
            <p>@Model.Text</p>
        </div>

        <a class="btn btn-sm btn-default" href="https://twitter.com/intent/retweet?tweet_id=@Model.Id">Retweet</a>
        
    </div>
</div>